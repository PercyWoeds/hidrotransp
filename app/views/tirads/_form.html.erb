<%= simple_form_for(@tirad) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
      <div class="field">
    <label class="bold">Empleado *</label><br />      
          <%= f.select :employee_id,options_from_collection_for_select(@employees,'id','full_name'),:style => "width:200px" %>
    </div>   
    
      
        <div class="field">
          <%=  select_tag(:turno, options_for_select([["TURNO 1",1],["TURNO 2",2],["TURNO 3",3],["TURNO 4",4]])) %>
        </div>
    
     
    
<div class="field">
    <%= f.label :fecha ,"Fecha "%><br />
    <%= f.date_field :fecha %>
    </div>
        
   <div class="field">
    <%= f.label :total ,"Importe "%><br />
    <%= f.number_field :importe,class: :text_field, step: :any %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
